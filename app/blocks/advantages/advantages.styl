.advantages
	overflow hidden
	&__container
		@extends .container
		padding-top 136px
		padding-bottom 40px
	&__title
		margin-bottom 68px
		padding-right 40px
		@extends .title
		line-height 1.333
		color #60cbe8
		text-align center
	&__list
		margin-left -30px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		position relative
		margin-bottom 123px
		padding-left 126px
		width 49%
	&__icon
		position absolute
		top 50%
		left 0
		width 110px
		height 110px
		border 3px solid #60cbe8
		background-color #ffffff
		border-radius 50%
		transform translateY(-50%)
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
	&__item-title
		color #60cbe8
		font-size 20px
		font-weight bold
	&__item-text
		font-size 18px
		font-weight normal
		color #595959
