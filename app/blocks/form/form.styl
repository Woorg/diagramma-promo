.form
	&__row
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	&__field
		// margin-left 50px
		width 380px
		&:first-child
			margin-left 0
	&__field_submit
		width 340px
	&__input
		padding-left 30px
		border none
		width 100%
		height 70px
		background #ffffff
		color #888888
		font-size 20px
		font-weight bold
	&__submit
		width 100%
		height 70px
		background-color #52bbd8
		color #ffffff
		font-size 20px
		font-weight bold
		text-transform uppercase
		border 1px solid #ffffff
